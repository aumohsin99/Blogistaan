@model List<Blog>

@{
    ViewBag.Title = "Writer Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
@*            <h2>Welcome, @User.Identity.Name!</h2>
*@    
            <h2>Welcome, Writer Hardcoded!</h2>

</div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Your published blogs:</h3>
            @if (Model == null || Model.Count == 0)
@*            @if (Model.Count == 0)
*@          {
                <p>You haven't published any blogs yet.</p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Published Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>@blog.Title</td>
                                <td>@blog.DatePublished.ToString("MMMM dd, yyyy")</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Blog", new { id = blog.Id })" class="btn btn-primary">Edit</a>
                                    <a href="@Url.Action("Delete", "Blog", new { id = blog.Id })" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("WriteBlog", "Writer")" class="btn btn-success">Add New Blog</a>
        </div>
    </div>
</div>
