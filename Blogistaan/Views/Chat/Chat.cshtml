@{
    ViewBag.Title = "Chat Room";
}

<h2>Chit Chat with other readers here</h2>

<input type="text" id="username" placeholder="Enter your name" />
<input type="text" id="message" placeholder="Type your message" />
<input type="button" id="sendButton" value="Send" />

<ul id="chatMessages"></ul>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>

    <script>
        $(function () {
            var chat = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

            chat.on("receiveMessage", function (user, message) {
                // Append the message to the chatMessages list
                $('#chatMessages').append('<li><strong>' + user + '</strong>: ' + message + '</li>');
            });

            chat.start().then(function () {
                $('#sendButton').click(function () {
                    var user = $('#username').val();
                    var message = $('#message').val();

                    chat.invoke("sendMessage", user, message);

                    $('#message').val('').focus();
                });
            }).catch(function (err) {
                console.error(err.toString());
            });
        });
    </script>
}
